<form action="/login" class="pure-form pure-form-stacked" method="post">
  <%= Rack::Csrf.csrf_tag(env) %>
  <label for="email"> Email:
  <input id="email" type="text" name="user[email]">
  </label>
  <label for="password"> Password:
  <input id="password" type="password" name="user[password]">
  </label>
  <input type="submit" value="Log In">
</form>

<a class="pure-button" href="users/new">Create new user</a>
